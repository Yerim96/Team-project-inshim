<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  </head>
  <body>
    <h3>회원 정보</h3>
    <div id="user_info">
      <div id="user_id">
        아이디:
        <p id="user_id_text"></p>
      </div>
      <div id="user_name">
        이름:
        <p id="user_name_text"></p>
      </div>
      <div id="user_country">
        국적:
        <p id="user_country_text"></p>
      </div>
    </div>

    <button type="button" onclick="pwChangeFunc()">비밀번호 변경</button>
    <button type="button" onclick="logoutFunc()">로그아웃</button>
    <script>
      window.addEventListener("load", checkIfLoggedIn());

      function checkIfLoggedIn() {
        // console.log(sessionStorage.getItem("loggedin_user"));
        // console.log(
        //   JSON.parse(sessionStorage.getItem("loggedin_user")).userinfo_id
        // );
        if (sessionStorage.getItem("loggedin_user")) {
          axios({
            method: "post",
            url: "/mypage",
            data: {
              userinfo_id: JSON.parse(sessionStorage.getItem("loggedin_user"))
                .userinfo_id,
            },
          }).then((res) => {
            console.log(res.data);
            document.getElementById("user_id_text").innerText =
              res.data.user_id;
            document.getElementById("user_name_text").innerText =
              res.data.user_name;
            document.getElementById("user_country_text").innerText =
              res.data.user_country;
          });
        } else {
          location.href = "/404";
        }
      }

      function logoutFunc() {
        axios({
          method: "post",
          url: "/mypage/logout",
          data: {
            loggedin_user: sessionStorage.getItem("loggedin_user"),
          },
        }).then((res) => {
          if (res.data.result) {
            sessionStorage.clear();
          }
        });
      }
    </script>
  </body>
</html>
